<!DOCTYPE html>
<html>
<head>
  <title>PointBox</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
    Logged in as <%= link_to "#{current_user.username}", user_path(current_user.id) %> | <%= link_to "Logout", logout_path %>
<% else %>
    <%= link_to "Create Account", new_user_path %> | <%= link_to "Login", login_path %>
<% end %>


<%= yield %>

</body>
</html>
